[Unit]
Description=Csphere Mongodb Service
After=csphere-prepare.service

[Service]
User=root
EnvironmentFile=/etc/csphere/csphere-public.env
EnvironmentFile=-/etc/csphere/csphere-mongodb.env
ExecStartPre=/bin/mkdir -p /data/db
ExecStartPre=/bin/mkdir -p /data/logs
ExecStart=/bin/mongod --quiet --config /etc/mongodb.conf
ExecStop=/bin/mongod --config /etc/mongodb.conf --shutdown
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
