[Unit]
Description=Csphere SkyDns Service
After=csphere-prepare.service
After=csphere-etcd2-agent.service

[Service]
User=root
EnvironmentFile=/etc/csphere/csphere-public.env
EnvironmentFile=/etc/csphere/csphere-skydns.env
ExecStartPre=/bin/sleep 3s
ExecStartPre=/bin/etcdctl set /skydns/config '{"domain":"csphere.local.","dns_addr":"0.0.0.0:53"}'
ExecStart=/etc/csphere/csphere-skydns-startup.bash
Restart=always
RestartSec=3s

[Install]
WantedBy=multi-user.target
